{
  "name": "cafe-pos-system",
  "version": "1.0.0",
  "description": "Modern Cafe POS System with Token-based Billing",
  "main": "public/electron-main.js",
  "homepage": ".",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "electron": "npx electron electron.js",
    "electron-dev": "node start-dev.js",
    "package": "npm run build && electron-builder --win --x64",
    "package-fast": "electron-builder --win --x64 --dir"
  },
  "keywords": ["electron", "pos", "cafe", "billing"],
  "author": "Aurelium Soft",
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "sql.js": "^1.10.3",
    "electron-store": "^8.1.0",
    "date-fns": "^2.30.0",
    "recharts": "^2.10.3",
    "react-icons": "^4.12.0",
    "jspdf": "^2.5.1",
    "html2canvas": "^1.4.1"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0",
    "react-scripts": "5.0.1",
    "tailwindcss": "^3.4.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.aureliumsoft.cafepos",
    "productName": "Cafe POS System",
    "copyright": "Copyright Â© 2024 Aurelium Soft",
    "extends": null,
    "files": [
      "build/**/*",
      "public/electron-main.js",
      "public/database.js",
      "public/preload.js"
    ],
    "directories": {
      "output": "dist"
    },
    "compression": "maximum",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": false,
      "displayLanguageSelector": false
    }
  }
}

